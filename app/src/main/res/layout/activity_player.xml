<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FF4444"
        android:textSize="@dimen/page_supporting_size"
        android:padding="16dp"
        android:background="#80000000"
        android:visibility="gone"/>

    <!-- Track selection buttons (top-right overlay) -->
    <LinearLayout
        android:id="@+id/track_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/safe_top_inset"
        android:layout_marginEnd="16dp"
        android:background="@drawable/player_overlay_bg"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_video_format"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/compact_control_text_size"
            android:textColor="#C6D0D6"
            android:background="@drawable/player_track_label"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:minWidth="0dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_audio"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Audio"
            android:textSize="@dimen/compact_control_text_size"
            android:textColor="#FFFFFF"
            android:background="@drawable/player_track_button"
            android:backgroundTint="@null"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:minWidth="0dp"
            android:focusable="true"
            android:stateListAnimator="@null"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Subtitles"
            android:textSize="@dimen/compact_control_text_size"
            android:textColor="#FFFFFF"
            android:background="@drawable/player_track_button"
            android:backgroundTint="@null"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:minWidth="0dp"
            android:focusable="true"
            android:stateListAnimator="@null"/>

    </LinearLayout>

</FrameLayout>

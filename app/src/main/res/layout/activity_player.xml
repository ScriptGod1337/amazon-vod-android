<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/player_error_panel"
        android:paddingStart="18dp"
        android:paddingTop="16dp"
        android:paddingEnd="18dp"
        android:paddingBottom="16dp"
        android:textColor="#F3F7FA"
        android:textSize="@dimen/page_supporting_size"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/track_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/safe_top_inset"
        android:layout_marginEnd="18dp"
        android:background="@drawable/player_overlay_panel"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.16"
            android:text="TRACKS"
            android:textAllCaps="true"
            android:textColor="#7E9CAA"
            android:textSize="@dimen/section_eyebrow_size" />

        <TextView
            android:id="@+id/tv_playback_title"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/page_supporting_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_playback_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/meta_text_size" />

        <TextView
            android:id="@+id/tv_video_format"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/player_track_label"
            android:gravity="center_vertical"
            android:minWidth="0dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#C6D0D6"
            android:textSize="@dimen/compact_control_text_size" />

        <TextView
            android:id="@+id/tv_playback_hint"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Press MENU for tracks. Press Back to leave playback."
            android:textColor="@color/text_tertiary"
            android:textSize="@dimen/meta_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:text="Audio &amp; subtitles"
            android:textColor="#AFC0CA"
            android:textSize="@dimen/meta_text_size" />

        <View
            android:layout_width="232dp"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/surface_outline" />

        <LinearLayout
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_audio"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/player_track_button"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:focusable="true"
                android:minWidth="0dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:stateListAnimator="@null"
                android:text="Audio"
                android:textAllCaps="false"
                android:textColor="@color/button_secondary_text"
                android:textSize="@dimen/compact_control_text_size" />

            <Button
                android:id="@+id/btn_subtitle"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/player_track_button"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:focusable="true"
                android:minWidth="0dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:stateListAnimator="@null"
                android:text="Subtitles"
                android:textAllCaps="false"
                android:textColor="@color/button_secondary_text"
                android:textSize="@dimen/compact_control_text_size" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

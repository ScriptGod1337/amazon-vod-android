<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/browse_screen_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="48dp"
        android:paddingTop="88dp"
        android:paddingEnd="48dp"
        android:paddingBottom="32dp">

        <LinearLayout
            android:id="@+id/browse_header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/browse_header_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="28dp"
            android:paddingTop="22dp"
            android:paddingEnd="24dp"
            android:paddingBottom="22dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.16"
                    android:text="BROWSE"
                    android:textAllCaps="true"
                    android:textColor="#86A3B0"
                    android:textSize="@dimen/section_eyebrow_size" />

                <TextView
                    android:id="@+id/tv_browse_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="#F5FAFD"
                    android:textSize="@dimen/page_title_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_browse_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="#C7D4DB"
                    android:textSize="@dimen/page_supporting_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_browse_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8FA5B0"
                    android:textSize="@dimen/body_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_browse_back"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="end"
                    android:background="@drawable/button_pill_secondary"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:minWidth="0dp"
                    android:nextFocusDown="@id/recycler_view"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:stateListAnimator="@null"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="@color/button_secondary_text"
                    android:textSize="@dimen/action_text_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_browse_context_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/settings_badge_background"
                        android:paddingStart="14dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="14dp"
                        android:paddingBottom="8dp"
                        android:textColor="#E9F6FB"
                        android:textSize="@dimen/status_chip_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_browse_count_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/settings_badge_background"
                        android:paddingStart="14dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="14dp"
                        android:paddingBottom="8dp"
                        android:text="Loading..."
                        android:textColor="#E9F6FB"
                        android:textSize="@dimen/status_chip_text_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/browse_grid_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/browse_grid_panel_background"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="24dp"
                android:textColor="#F36C67"
                android:textSize="@dimen/page_supporting_size"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shimmer_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:focusable="false"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:descendantFocusability="afterDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusUp="@id/btn_browse_back"
                android:paddingStart="4dp"
                android:paddingTop="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="16dp" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>

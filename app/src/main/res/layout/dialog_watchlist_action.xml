<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/detail_panel_background"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_watchlist_dialog_eyebrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:letterSpacing="0.16"
        android:text="WATCHLIST"
        android:textAllCaps="true"
        android:textColor="#8AA4B2"
        android:textSize="@dimen/section_eyebrow_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_watchlist_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/panel_title_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_watchlist_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="#C6D6DE"
        android:textSize="@dimen/body_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_watchlist_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_pill_secondary"
            android:backgroundTint="@null"
            android:minWidth="0dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:stateListAnimator="@null"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/button_secondary_text"
            android:textSize="@dimen/action_text_size" />

        <Button
            android:id="@+id/btn_watchlist_dialog_primary"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/button_pill_primary"
            android:backgroundTint="@null"
            android:minWidth="0dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:textColor="@color/button_primary_text"
            android:textSize="@dimen/action_text_size" />
    </LinearLayout>
</LinearLayout>

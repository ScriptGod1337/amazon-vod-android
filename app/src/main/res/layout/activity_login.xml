<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#00A8E0"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="48dp"/>

        <!-- Email field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="#666666"
            android:hint="your@email.com"
            android:background="#222222"
            android:padding="12dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="16dp"/>

        <!-- Password field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#666666"
            android:hint="Password"
            android:background="#222222"
            android:padding="12dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cb_show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show password"
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:buttonTint="#00A8E0"
            android:focusable="true"
            android:layout_marginBottom="16dp"/>

        <!-- MFA field (hidden initially) -->
        <LinearLayout
            android:id="@+id/mfa_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verification Code"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/et_mfa"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textColorHint="#666666"
                android:hint="Enter 6-digit code"
                android:background="#222222"
                android:padding="12dp"
                android:singleLine="true"
                android:maxLength="6"
                android:imeOptions="actionDone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>

        <!-- Login button -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Sign In"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#00A8E0"
            android:focusable="true"
            android:layout_marginBottom="16dp"/>

        <!-- Status text -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF4444"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <!-- Skip login (use .device-token) -->
        <Button
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Device Token"
            android:textColor="#888888"
            android:textSize="12sp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:layout_marginTop="32dp"/>

    </LinearLayout>
</ScrollView>

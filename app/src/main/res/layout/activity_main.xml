<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/safe_top_inset">

        <LinearLayout
            android:id="@+id/nav_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bar_height"
            android:background="@drawable/header_nav_bar_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_background"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:minWidth="0dp"
                android:nextFocusDown="@id/recycler_view"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                android:text="Home"
                android:textAllCaps="false"
                android:textColor="@color/nav_button_text"
                android:textSize="@dimen/action_text_size" />

            <Button
                android:id="@+id/btn_freevee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_background"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:minWidth="0dp"
                android:nextFocusDown="@id/recycler_view"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                android:text="Freevee"
                android:textAllCaps="false"
                android:textColor="@color/nav_button_text"
                android:textSize="@dimen/action_text_size" />

            <Button
                android:id="@+id/btn_watchlist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_background"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:minWidth="0dp"
                android:nextFocusDown="@id/recycler_view"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                android:text="Watchlist"
                android:textAllCaps="false"
                android:textColor="@color/nav_button_text"
                android:textSize="@dimen/action_text_size" />

            <Button
                android:id="@+id/btn_library"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_background"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:minWidth="0dp"
                android:nextFocusDown="@id/recycler_view"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                android:text="Library"
                android:textAllCaps="false"
                android:textColor="@color/nav_button_text"
                android:textSize="@dimen/action_text_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_search_icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/header_icon_button_background"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:contentDescription="@string/search_button_icon"
                android:minWidth="0dp"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search"
                android:stateListAnimator="@null"
                android:tint="@color/header_icon_text" />

            <Button
                android:id="@+id/btn_about"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/header_icon_button_background"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:minWidth="0dp"
                android:stateListAnimator="@null"
                android:text="⚙"
                android:textAllCaps="false"
                android:textColor="@color/header_icon_text"
                android:textSize="@dimen/page_supporting_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/page_padding"
            android:layout_marginEnd="@dimen/page_padding"
            android:background="@drawable/header_secondary_row_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:visibility="gone">

            <com.scriptgod.fireos.avod.ui.DpadEditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/search_field_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/search_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:nextFocusDown="@id/recycler_view"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="#888888" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/button_pill_primary"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:nextFocusDown="@id/recycler_view"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Search"
                android:textAllCaps="false"
                android:textColor="@color/button_primary_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_state_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/page_padding"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/page_padding"
            android:layout_marginBottom="4dp"
            android:background="@drawable/search_state_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingEnd="18dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:letterSpacing="0.14"
                    android:text="SEARCH"
                    android:textAllCaps="true"
                    android:textColor="#7E9CAA"
                    android:textSize="@dimen/section_eyebrow_size" />

                <TextView
                    android:id="@+id/tv_search_query"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/search_state_title_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_search_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Refine the query or use type filters to narrow the grid."
                    android:textColor="@color/text_tertiary"
                    android:textSize="@dimen/body_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_search_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_badge_background"
                android:paddingStart="14dp"
                android:paddingTop="8dp"
                android:paddingEnd="14dp"
                android:paddingBottom="8dp"
                android:textColor="#E9F6FB"
                android:textSize="@dimen/status_chip_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/library_filter_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/page_padding"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/page_padding"
            android:layout_marginBottom="4dp"
            android:background="@drawable/header_secondary_row_background"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_lib_all"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/filter_chip_background"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:stateListAnimator="@null"
                android:text="All"
                android:textAllCaps="false"
                android:textColor="@color/filter_chip_text"
                android:textSize="@dimen/compact_control_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_lib_movies"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/filter_chip_background"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:stateListAnimator="@null"
                android:text="Movies"
                android:textAllCaps="false"
                android:textColor="@color/filter_chip_text"
                android:textSize="@dimen/compact_control_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_lib_shows"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/filter_chip_background"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:stateListAnimator="@null"
                android:text="TV Shows"
                android:textAllCaps="false"
                android:textColor="@color/filter_chip_text"
                android:textSize="@dimen/compact_control_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_lib_sort"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/filter_chip_background"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:stateListAnimator="@null"
                android:text="↕ Recent"
                android:textAllCaps="false"
                android:textColor="@color/filter_chip_text"
                android:textSize="@dimen/compact_control_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_filter_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/page_padding"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/page_padding"
            android:layout_marginBottom="4dp"
            android:background="@drawable/header_secondary_row_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/source_filter_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_source_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:letterSpacing="0.08"
                    android:text="Availability"
                    android:textColor="#7F8A92"
                    android:textSize="@dimen/section_eyebrow_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/source_filter_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cat_all"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/filter_chip_background"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:nextFocusDown="@id/recycler_view"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:stateListAnimator="@null"
                        android:text="All"
                        android:textAllCaps="false"
                        android:textColor="@color/filter_chip_text"
                        android:textSize="@dimen/compact_control_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_cat_prime"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="@drawable/filter_chip_background"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:nextFocusDown="@id/recycler_view"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:stateListAnimator="@null"
                        android:text="Prime"
                        android:textAllCaps="false"
                        android:textColor="@color/filter_chip_text"
                        android:textSize="@dimen/compact_control_text_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/type_filter_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:letterSpacing="0.08"
                    android:text="Type"
                    android:textColor="#7F8A92"
                    android:textSize="@dimen/section_eyebrow_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/type_filter_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_type_all"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/filter_chip_background"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:nextFocusDown="@id/recycler_view"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:stateListAnimator="@null"
                        android:text="All Types"
                        android:textAllCaps="false"
                        android:textColor="@color/filter_chip_text"
                        android:textSize="@dimen/compact_control_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_cat_movies"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/filter_chip_background"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:nextFocusDown="@id/recycler_view"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:stateListAnimator="@null"
                        android:text="Movies"
                        android:textAllCaps="false"
                        android:textColor="@color/filter_chip_text"
                        android:textSize="@dimen/compact_control_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_cat_series"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="@drawable/filter_chip_background"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:nextFocusDown="@id/recycler_view"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:stateListAnimator="@null"
                        android:text="Series"
                        android:textAllCaps="false"
                        android:textColor="@color/filter_chip_text"
                        android:textSize="@dimen/compact_control_text_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_featured_strip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/featured_strip_height"
            android:layout_marginStart="@dimen/page_padding"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/page_padding"
            android:layout_marginBottom="4dp"
            android:background="@drawable/detail_panel_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_home_featured"
                android:layout_width="@dimen/featured_strip_image_width"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#1A1A1A"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_home_featured_eyebrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:letterSpacing="0.14"
                    android:textAllCaps="true"
                    android:textColor="#8AA4B2"
                    android:textSize="@dimen/section_eyebrow_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_home_featured_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/body_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_home_featured_meta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/compact_control_text_size" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FF4444"
                android:textSize="@dimen/page_supporting_size"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shimmer_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:focusable="false"
                android:paddingStart="@dimen/page_padding"
                android:paddingTop="8dp"
                android:paddingEnd="@dimen/page_padding"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:descendantFocusability="afterDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusUp="@id/btn_home"
            android:paddingTop="2dp"
            android:paddingBottom="8dp" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>

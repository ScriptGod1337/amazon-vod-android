<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0F11">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/detail_hero_section"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/iv_hero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription=""
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hero_gradient" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/detail_body_section"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingStart="40dp"
            android:paddingTop="12dp"
            android:paddingEnd="40dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="156dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="18dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="match_parent"
                    android:layout_height="188dp"
                    android:contentDescription=""
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_detail_eyebrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/detail_chip_background"
                    android:paddingStart="14dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="8dp"
                    android:textColor="#E6F3F9"
                    android:textSize="@dimen/status_chip_text_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/detail_panel_background"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="24dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="22dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:letterSpacing="0.14"
                            android:text="DETAILS"
                            android:textAllCaps="true"
                            android:textColor="#7E9CAA"
                            android:textSize="@dimen/section_eyebrow_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="24dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="3"
                                    android:textColor="#FFFFFF"
                                    android:textSize="27sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_metadata"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:textColor="#D2E0E7"
                                    android:textSize="@dimen/page_supporting_size" />

                                <TextView
                                    android:id="@+id/tv_imdb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:textColor="#F3C85F"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tv_prime_badge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tv_detail_support"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:textColor="#9CB3BF"
                                    android:textSize="@dimen/meta_text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/detail_action_stack"
                                android:layout_width="228dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/detail_action_row_primary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/btn_play"
                                        android:layout_width="match_parent"
                                        android:layout_height="38dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/button_pill_primary"
                                        android:backgroundTint="@null"
                                        app:backgroundTint="@null"
                                        android:focusable="true"
                                        android:minWidth="0dp"
                                        android:paddingStart="18dp"
                                        android:paddingEnd="18dp"
                                        android:stateListAnimator="@null"
                                        android:text="▶  Play"
                                        android:textAllCaps="false"
                                        android:textColor="@color/button_primary_text"
                                        android:textSize="@dimen/action_text_size"
                                        android:visibility="gone" />

                                    <Button
                                        android:id="@+id/btn_trailer"
                                        android:layout_width="match_parent"
                                        android:layout_height="38dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/button_pill_secondary"
                                        android:backgroundTint="@null"
                                        app:backgroundTint="@null"
                                        android:focusable="true"
                                        android:minWidth="0dp"
                                        android:paddingStart="18dp"
                                        android:paddingEnd="18dp"
                                        android:stateListAnimator="@null"
                                        android:text="▶  Trailer"
                                        android:textAllCaps="false"
                                        android:textColor="@color/button_secondary_text"
                                        android:textSize="@dimen/action_text_size"
                                        android:visibility="gone" />

                                    <Button
                                        android:id="@+id/btn_browse"
                                        android:layout_width="match_parent"
                                        android:layout_height="38dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/button_pill_primary"
                                        android:backgroundTint="@null"
                                        app:backgroundTint="@null"
                                        android:focusable="true"
                                        android:minWidth="0dp"
                                        android:paddingStart="18dp"
                                        android:paddingEnd="18dp"
                                        android:stateListAnimator="@null"
                                        android:text="Browse"
                                        android:textAllCaps="false"
                                        android:textColor="@color/button_primary_text"
                                        android:textSize="@dimen/action_text_size"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/detail_action_row_secondary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/btn_seasons"
                                        android:layout_width="match_parent"
                                        android:layout_height="38dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/button_pill_secondary"
                                        android:backgroundTint="@null"
                                        app:backgroundTint="@null"
                                        android:focusable="true"
                                        android:minWidth="0dp"
                                        android:paddingStart="18dp"
                                        android:paddingEnd="18dp"
                                        android:stateListAnimator="@null"
                                        android:text="All Seasons"
                                        android:textAllCaps="false"
                                        android:textColor="@color/button_secondary_text"
                                        android:textSize="@dimen/action_text_size"
                                        android:visibility="gone" />

                                    <Button
                                        android:id="@+id/btn_watchlist"
                                        android:layout_width="match_parent"
                                        android:layout_height="38dp"
                                        android:background="@drawable/button_pill_tertiary"
                                        android:backgroundTint="@null"
                                        app:backgroundTint="@null"
                                        android:focusable="true"
                                        android:minWidth="0dp"
                                        android:paddingStart="18dp"
                                        android:paddingEnd="18dp"
                                        android:stateListAnimator="@null"
                                        android:text="☆  Watchlist"
                                        android:textAllCaps="false"
                                        android:textColor="@color/button_tertiary_text"
                                        android:textSize="@dimen/action_text_size"
                                        android:visibility="gone" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_synopsis_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="8dp"
                            android:letterSpacing="0.14"
                            android:text="Synopsis"
                            android:textAllCaps="true"
                            android:textColor="#7E9CAA"
                            android:textSize="@dimen/section_eyebrow_size" />

                        <TextView
                            android:id="@+id/tv_synopsis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="1.3"
                            android:textColor="#D3DDE2"
                            android:textSize="@dimen/body_text_size"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_directors_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22dp"
                            android:layout_marginBottom="10dp"
                            android:letterSpacing="0.14"
                            android:text="Credits"
                            android:textAllCaps="true"
                            android:textColor="#7E9CAA"
                            android:textSize="@dimen/section_eyebrow_size"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_directors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#B6C7CF"
                            android:textSize="@dimen/meta_text_size"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="32dp"
        android:textColor="#FF4444"
        android:textSize="@dimen/page_supporting_size"
        android:visibility="gone" />

</FrameLayout>

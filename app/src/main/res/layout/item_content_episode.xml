<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="248dp"
    android:layout_height="180dp"
    android:layout_marginEnd="@dimen/card_spacing"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="6dp">

    <View
        android:id="@+id/v_focus_glow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@drawable/card_focus_glow" />

    <LinearLayout
        android:id="@+id/card_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_surface_background_landscape"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1C1C1C"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_watchlist"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:src="@android:drawable/btn_star_big_off"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_badges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:gravity="end"
                android:orientation="horizontal" />

            <ProgressBar
                android:id="@+id/pb_watch_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:max="100"
                android:progress="0"
                android:progressTint="#F5A623"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/tv_overline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="#A7C4D2"
                android:textSize="@dimen/card_overline_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/compact_control_text_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_focus_ring"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@drawable/card_focus_ring" />
</FrameLayout>

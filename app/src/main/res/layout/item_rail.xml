<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/rail_vertical_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/page_padding"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/page_padding"
        android:paddingBottom="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rail_eyebrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:letterSpacing="0.16"
                android:textAllCaps="true"
                android:textColor="#7E9CAA"
                android:textSize="@dimen/section_eyebrow_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_rail_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/rail_header_size"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:text="See All"
            android:textColor="#00A8E0"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rail_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:descendantFocusability="afterDescendants"
        android:focusable="false"
        android:paddingStart="@dimen/page_padding"
        android:paddingEnd="@dimen/page_padding" />
</LinearLayout>

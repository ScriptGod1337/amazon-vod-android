<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_selected="true">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="#52BDD9" />
            <stroke
                android:width="2dp"
                android:color="@color/accent_outline" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="#173C49" />
            <stroke
                android:width="1dp"
                android:color="#245B6D" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="@color/surface_panel_soft" />
            <stroke
                android:width="2dp"
                android:color="@color/accent_outline" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="#1C2328" />
            <stroke
                android:width="1dp"
                android:color="@color/surface_outline" />
        </shape>
    </item>
</selector>

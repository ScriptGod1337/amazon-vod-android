<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <corners android:radius="18dp" />
            <gradient
                android:angle="270"
                android:startColor="#47B7D6"
                android:endColor="#2B90AE" />
            <stroke
                android:width="2dp"
                android:color="@color/accent_outline" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="18dp" />
            <solid android:color="#2D8CAA" />
            <stroke
                android:width="1dp"
                android:color="#B7F1FF" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="18dp" />
            <gradient
                android:angle="270"
                android:startColor="#D01C242A"
                android:endColor="#B8141A1F" />
            <stroke
                android:width="1dp"
                android:color="@color/surface_outline" />
        </shape>
    </item>
</selector>

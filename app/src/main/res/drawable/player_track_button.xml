<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <corners android:radius="18dp" />
            <solid android:color="#3AA7C6" />
            <stroke
                android:width="2dp"
                android:color="#F2FBFF" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="18dp" />
            <solid android:color="#2D8CAA" />
            <stroke
                android:width="1dp"
                android:color="#B7F1FF" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="18dp" />
            <solid android:color="#C01A2025" />
            <stroke
                android:width="1dp"
                android:color="#38505C" />
        </shape>
    </item>
</selector>
